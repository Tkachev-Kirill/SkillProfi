@using SkillProfiClasses.Pages.ProjectPage;
@model ProjectPage
@{
    ViewData["Title"] = $"{@Model.Name}";
}


<style>
    .image-size {
        width: 100px;
        height: 100px;
    }

</style>

<div class="content">
    <h1>@Model.Name</h1>

    <img src="~/Images/@Model.PathToImage" alt="картинка" class="image-size">
    <p>@Model.Description</p>
</div>

<style>
    .content {
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 20px;
        background-color: #f0f0f0;
        border-radius: 10px;
    }

    .image-size {
        width: 200px;
        height: 200px;
        border-radius: 50%;
        margin-bottom: 20px;
    }

    h1 {
        color: #333;
        margin-bottom: 20px;
    }

</style>