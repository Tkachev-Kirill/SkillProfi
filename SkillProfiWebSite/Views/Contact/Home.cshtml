@using SkillProfiClasses.Pages.MainPage;
@{
    ViewData["Title"] = "Контакты";
}

@model ContactPageViewModel
<div class="content">
    <h1>Контакты</h1>
    <div class="left">
        <p>Адрес: @Model.Contact.Address</p>
        <p>Email: @Model.Contact.Email</p>
        <p>Phone: @Model.Contact.Phone</p>
    </div>
    <div class="right">
        <p>Наши соц. сети</p>
        @foreach (var item in Model.SocialNetwork)
        {
            <a href="@item.PathToSite" target="_blank" class="edit-post highlight">
                <div class="item">
                    <img src="~/Images/@item.PathToImage" alt="картинка" class="image-size">
                </div>
            </a>
        }
    </div>
</div>

<style>
    .content {
        display: grid;
        grid-template-columns: 1fr 1fr;
        grid-gap: 20px;
    }

    .left {
        grid-column: 1;
        background-color: #e0e0e0;
        padding: 20px;
        border-radius: 10px;
    }

    .right {
        grid-column: 2;
        background-color: #e0e0e0;
        padding: 20px;
        border-radius: 10px;
    }

    .image-size {
        width: 20px;
        height: 20px;
    }

    a {
        color: #000;
        text-decoration: none;
    }

        a:hover {
            color: #f00;
        }
</style>