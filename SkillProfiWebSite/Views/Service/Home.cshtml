@using SkillProfiClasses.Pages.ServicePage;
@{
    ViewData["Title"] = "Услуги";
}

@model List<ServicePage>

<div class="content">
    <h1>Что мы можем сделать</h1>

    @foreach (var item in Model)
    {
        <div class="item">
            <div class="item-header">
                <h2>@item.Name</h2>
            </div>
            <div class="item-body">
                <p>@item.Description</p>
            </div>
        </div>
    }
</div>

<script>
    document.querySelectorAll('.item-header').forEach(header => {
        header.addEventListener('click', () => {
            header.nextElementSibling.style.display = header.nextElementSibling.style.display === 'none' ? 'block' : 'none';
        });
    });
</script>

<style>
  

    .content {
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
        text-align: center;
    }

    h1 {
        color: #333;
        margin-bottom: 20px;
        margin-right: 20px;
    }

    .item {
        margin: 10px;
        border: 1px solid #ddd;
        border-radius: 5px;
        padding: 10px;
        background-color: #333;
        transition: all 0.3s ease;
        display: block; 
        width: 30%; 
    }

        .item:hover {
            transform: scale(1.05);
        }

    .item-header {
        cursor: pointer;
        color: #ddd;
    }

        .item-header:hover {
            color: #ff6600; /* Цвет при наведении */
        }

    .item-body {
        display: none;
        color: #333;
        background-color: #ddd;
        border-radius: 5px;
    }
</style>


